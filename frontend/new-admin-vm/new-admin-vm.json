{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dnsLabelPrefix": {
            "type": "string",
            "metadata": {
                "description": "Unique public DNS prefix for the deployment. The fqdn will look something like '<dnsname>.westus.cloudapp.azure.com'. Up to 62 chars, digits or dashes, lowercase, should start with a letter: must conform to '^[a-z][a-z0-9-]{1,61}[a-z0-9]$'."
            }
        },
        "domainToJoin": {
            "type": "string",
            "metadata": {
                "description": "The FQDN of the AD domain"
            }
        },
        "domainGroupAppServersJoin": {
            "type": "string",
            "metadata": {
                "description": "The domain group the application servers should join"
            }
        },
        "domainUsername": {
            "type": "string",
            "metadata": {
                "description": "Username of the account on the domain"
            }
        },
        "domainPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password of the account on the domain"
            }
        },
        "domainControllerName": {
            "type": "string",
            "metadata": {
                "description": "The network name of the domain controller (without domain suffix)"
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Storage account to use for VM data and VHD's"
            }
        },
        "camSaasUri": {
            "type": "string",
            "metadata": {
                "description": "URI for the CAM SAAS"
            }
        },
        "verifyCAMSaaSCertificate": {
            "type": "bool",
            "metadata": {
                "description": "a flag to indicate whether to verify CAM SaaS Server certificate. True means to verify."
            }
        },
        "keyVaultId": {
            "type": "string",
            "metadata": {
                "description": "Id of the keyvault where user credentials for the deployment are stored."
            }
        },
        "CAMDeploymentInfo": {
            "type": "securestring",
            "metadata": {
                "description": "Encoded blob of authorization and URL information for the CAM Frontend."
            }
        },
        "CAMDeploymentBlobSource": {
            "type": "string",
            "metadata": {
              "description": "The location of the blobs for admin GUI machine installation"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources, such as templates and DSC modules, that the template depends on"
            }
        },
        "_agentArtifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources, such as templates and DSC modules, specific to the PCoIP Agent"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "imagePublisher": "MicrosoftWindowsServer",
        "imageOffer": "WindowsServer",
        "windowsOSVersion": "2016-Datacenter",
        "apiVersion": "2015-06-15",
        "nicName": "[concat(parameters('dnsLabelPrefix'),'Nic')]",
        "publicIPName": "[concat(parameters('dnsLabelPrefix'),'Pip')]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('dnsLabelPrefix'),'/InstallAdminGUIDscExtension')]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.9",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "modulesUrl": "[concat(parameters('CAMDeploymentBlobSource'),'/Install-CAM-CS.ps1.zip')]",
                    "privacy": {
                        "DataCollection": "Disable"
                    },
                    "configurationFunction": "Install-CAM-CS.ps1\\InstallCAM",
                    "Properties": {
                        "domainFQDN":  "[parameters('domainToJoin')]",
                        "domainGroupAppServersJoin": "[parameters('domainGroupAppServersJoin')]",
                        "sourceURI": "[parameters('CAMDeploymentBlobSource')]",
						"templateURI": "[parameters('_artifactsLocation')]",
						"templateAgentURI": "[parameters('_agentArtifactsLocation')]",
                        "DomainAdminCreds": {
                            "UserName": "[parameters('domainUsername')]",
                            "Password": "PrivateSettingsRef:DomainAdminPassword"
                        },
                        "CAMDeploymentInfo": {
                            "UserName": "dummy",
                            "Password": "PrivateSettingsRef:CAMDeploymentInfo"
                        },
                        "camSaasUri" : "[parameters('camSaasUri')]",
                        "keyVaultId" : "[parameters('keyVaultId')]",
                        "verifyCAMSaaSCertificate": "[parameters('verifyCAMSaaSCertificate')]",
                        "DCVMName": "[parameters('domainControllerName')]",
                        "RGName": "[resourceGroup().name]",
                        "storageAccountName": "[parameters('storageAccountName')]",
                        "gitLocation": "[parameters('_artifactsLocation')]",
                        "sumoCollectorID": "[concat('CAMPOC-',resourceGroup().name,'-AdminUI-',subscription().subscriptionId)]"
                    }
                },
                "protectedSettings": {
                    "Items": {
                        "DomainAdminPassword": "[parameters('domainPassword')]",
                        "CAMDeploymentInfo": "[parameters('CAMDeploymentInfo')]"
                    }
                }
            }
        }
    ]
}
